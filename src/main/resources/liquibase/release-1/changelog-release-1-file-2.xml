<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="oic-eug-4" logicalFilePath="path-independent" author="eugene">
        <comment>Creating table: batches</comment>
        <createTable tableName="batches" schemaName="apps" remarks="Сеансы обмена данными">
            <column name="id" type="number" remarks="Идентификатор">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)" remarks="Описание сеанса">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="oic-eug-5" logicalFilePath="path-independent" author="eugene">
        <comment>Creating primary key for table: batches</comment>
        <addPrimaryKey
                columnNames="id"
                constraintName="pk_batches"
                schemaName="apps"
                tableName="batches"/>
    </changeSet>

    <changeSet id="oic-eug-6" logicalFilePath="path-independent" author="eugene">
        <comment>Creating sequence for table: batches</comment>
        <createSequence
                incrementBy="1"
                schemaName="apps"
                sequenceName="batches_s"
                startValue="1"/>
    </changeSet>
    
</databaseChangeLog>
