<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="oic-eug-1" logicalFilePath="path-independent" author="eugene">
        <comment>Creating table: units</comment>
        <createTable tableName="units" schemaName="apps" remarks="Справочник единиц измерения">
            <column name="id" type="number" remarks="Идентификатор">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="varchar(100)" remarks="Наименование единицы измерения">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="oic-eug-2" logicalFilePath="path-independent" author="eugene">
        <comment>Creating primary key for table: units</comment>
        <addPrimaryKey
                columnNames="id"
                constraintName="pk_units"
                schemaName="apps"
                tableName="units"/>
    </changeSet>

    <changeSet id="oic-eug-3" logicalFilePath="path-independent" author="eugene">
        <comment>Creating sequence for table: units</comment>
        <createSequence
                incrementBy="1"
                schemaName="apps"
                sequenceName="units_s"
                startValue="1"/>
    </changeSet>
    
</databaseChangeLog>
